// ÆLang Comprehensive Unified Read System Test
// Testing unified read() function with ALL data types

extern print(format: str, ...);
extern read();

func test_unified_read_system(): void {
    print("=== ÆLang Comprehensive Unified Read System Test ===\\n");
    
    // Test all signed integer types
    print("--- Signed Integer Types ---\\n");
    print("Enter an i8 value (-128 to 127): ");
    let test_i8: i8 = read();
    print("You entered i8: %d\\n", test_i8);
    
    print("Enter an i16 value (-32768 to 32767): ");
    let test_i16: i16 = read();
    print("You entered i16: %d\\n", test_i16);
    
    print("Enter an i32 value: ");
    let test_i32: i32 = read();
    print("You entered i32: %d\\n", test_i32);
    
    print("Enter an i64 value: ");
    let test_i64: i64 = read();
    print("You entered i64: %ld\\n", test_i64);
    
    // Test all unsigned integer types
    print("--- Unsigned Integer Types ---\\n");
    print("Enter a u8 value (0 to 255): ");
    let test_u8: u8 = read();
    print("You entered u8: %u\\n", test_u8);
    
    print("Enter a u16 value (0 to 65535): ");
    let test_u16: u16 = read();
    print("You entered u16: %u\\n", test_u16);
    
    print("Enter a u32 value: ");
    let test_u32: u32 = read();
    print("You entered u32: %u\\n", test_u32);
    
    print("Enter a u64 value: ");
    let test_u64: u64 = read();
    print("You entered u64: %lu\\n", test_u64);
    
    // Test floating point types
    print("--- Floating Point Types ---\\n");
    print("Enter an f32 value (float): ");
    let test_f32: f32 = read();
    print("You entered f32: %f\\n", test_f32);
    
    print("Enter an f64 value (double): ");
    let test_f64: f64 = read();
    print("You entered f64: %f\\n", test_f64);
    
    // Test other types
    print("--- Other Types ---\\n");
    print("Enter a boolean (true/false or 1/0): ");
    let test_bool: bool = read();
    print("You entered bool: %t\\n", test_bool);
    
    print("Enter a single character: ");
    let test_char: char = read();
    print("You entered char: %c\\n", test_char);
    
    print("Enter a numeric value (num type): ");
    let test_num: num = read();
    print("You entered num: %g\\n", test_num);
}

func simple_demo(): void {
    print("=== Simple Unified Read Demo ===\\n");
    
    print("Enter your age: ");
    let age: i32 = read();  // Automatically calls read_i32()
    
    print("Enter your height: ");
    let height: f32 = read();  // Automatically calls read_f32()
    
    print("Are you a student? (true/false): ");
    let is_student: bool = read();  // Automatically calls read_bool()
    
    print("\\n--- Your Information ---\\n");
    print("Age: %d\\n", age);
    print("Height: %f\\n", height);
    print("Student: %t\\n", is_student);
}

func main(): void {
    test_unified_read_system();
    simple_demo();
}
