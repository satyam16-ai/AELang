extern print(format: str, ...);
extern read(): num;

func simple_calculator(): void {
    print("╔══════════════════════════════════════════════════════════════════╗\n");
    print("║                    ÆLang Interactive Calculator                  ║\n");
    print("║                 Supporting All Data Types!                      ║\n");
    print("╚══════════════════════════════════════════════════════════════════╝\n");
    
    print("\n=== Basic Calculator Test ===\n");
    print("Enter first number: ");
    let num1: num = read();
    
    print("Enter second number: ");
    let num2: num = read();
    
    print("\n--- Results ---\n");
    print("Addition: %f + %f = %f\n", num1, num2, num1 + num2);
    print("Subtraction: %f - %f = %f\n", num1, num2, num1 - num2);
    print("Multiplication: %f * %f = %f\n", num1, num2, num1 * num2);
    
    if (num2 != 0.0) {
        print("Division: %f / %f = %f\n", num1, num2, num1 / num2);
    } else {
        print("Division: Cannot divide by zero!\n");
    }
}

func test_f8_f16_precision(): void {
    print("\n╔══════════════════════════════════════════════════════════════════╗\n");
    print("║                    F8/F16 Precision Test                        ║\n");
    print("║              Testing Custom Float Types                         ║\n");
    print("╚══════════════════════════════════════════════════════════════════╝\n");
    
    // Test F8 (8-bit custom float)
    print("\n=== F8 (8-bit Custom Float) Test ===\n");
    let f8_val1: f8 = 3.5;
    let f8_val2: f8 = 1.25;
    
    print("F8 Value 1: %f\n", f8_val1);
    print("F8 Value 2: %f\n", f8_val2);
    print("F8 Addition: %f + %f = %f\n", f8_val1, f8_val2, f8_val1 + f8_val2);
    print("F8 Multiplication: %f * %f = %f\n", f8_val1, f8_val2, f8_val1 * f8_val2);
    
    // Test F16 (IEEE 754 half precision)
    print("\n=== F16 (Half Precision) Test ===\n");
    let f16_val1: f16 = 15.625;
    let f16_val2: f16 = 2.5;
    
    print("F16 Value 1: %f\n", f16_val1);
    print("F16 Value 2: %f\n", f16_val2);
    print("F16 Addition: %f + %f = %f\n", f16_val1, f16_val2, f16_val1 + f16_val2);
    print("F16 Division: %f / %f = %f\n", f16_val1, f16_val2, f16_val1 / f16_val2);
    
    // Interactive F8 test
    print("\n=== Interactive F8 Calculator ===\n");
    print("Enter a number to convert to F8: ");
    let input_val: num = read();
    let f8_converted: f8 = input_val;
    
    print("Original NUM: %f\n", input_val);
    print("Converted to F8: %f\n", f8_converted);
    print("F8 squared: %f\n", f8_converted * f8_converted);
}

func test_all_integer_types(): void {
    print("\n╔══════════════════════════════════════════════════════════════════╗\n");
    print("║                   Complete Integer Type Test                    ║\n");
    print("║           i8, i16, i32, i64, u8, u16, u32, u64                  ║\n");
    print("╚══════════════════════════════════════════════════════════════════╝\n");
    
    // Signed integers
    print("\n=== Signed Integer Tests ===\n");
    let test_i8: i8 = -128;
    let test_i16: i16 = -32768;
    let test_i32: i32 = -2147483648;
    let test_i64: i64 = -9223372036854775808;
    
    print("i8 min value: %d\n", test_i8);
    print("i16 min value: %d\n", test_i16);
    print("i32 min value: %d\n", test_i32);
    print("i64 min value: %lld\n", test_i64);
    
    // Unsigned integers
    print("\n=== Unsigned Integer Tests ===\n");
    let test_u8: u8 = 255;
    let test_u16: u16 = 65535;
    let test_u32: u32 = 4294967295;
    let test_u64: u64 = 18446744073709551615;
    
    print("u8 max value: %u\n", test_u8);
    print("u16 max value: %u\n", test_u16);
    print("u32 max value: %u\n", test_u32);
    print("u64 max value: %llu\n", test_u64);
    
    // Arithmetic tests
    print("\n=== Integer Arithmetic ===\n");
    print("Enter an integer for testing: ");
    let user_int: num = read();
    let converted_i32: i32 = user_int;
    
    print("Your number as i32: %d\n", converted_i32);
    print("Doubled: %d\n", converted_i32 * 2);
    print("Squared: %d\n", converted_i32 * converted_i32);
}

func comprehensive_float_test(): void {
    print("\n╔══════════════════════════════════════════════════════════════════╗\n");
    print("║               Complete Float Precision Test                     ║\n");
    print("║                f8, f16, f32, f64, num                           ║\n");
    print("╚══════════════════════════════════════════════════════════════════╝\n");
    
    print("\n=== Precision Comparison ===\n");
    let pi_f8: f8 = 3.14159;
    let pi_f16: f16 = 3.14159;
    let pi_f32: f32 = 3.14159;
    let pi_f64: f64 = 3.14159265359;
    let pi_num: num = 3.14159265359;
    
    print("π in different precisions:\n");
    print("F8:  %f (8-bit custom)\n", pi_f8);
    print("F16: %f (half precision)\n", pi_f16);
    print("F32: %f (single precision)\n", pi_f32);
    print("F64: %f (double precision)\n", pi_f64);
    print("NUM: %f (universal type)\n", pi_num);
    
    print("\n=== Arithmetic Precision Test ===\n");
    let val: f64 = 1.0;
    let third: f64 = 1.0 / 3.0;
    
    print("1/3 as f64: %f\n", third);
    print("(1/3) * 3: %f\n", third * 3.0);
    
    // Interactive precision test
    print("\n=== Interactive Precision Test ===\n");
    print("Enter a decimal number: ");
    let user_float: num = read();
    
    let as_f8: f8 = user_float;
    let as_f16: f16 = user_float;
    let as_f32: f32 = user_float;
    let as_f64: f64 = user_float;
    
    print("\nYour number in different precisions:\n");
    print("Original NUM: %f\n", user_float);
    print("As F8:  %f\n", as_f8);
    print("As F16: %f\n", as_f16);
    print("As F32: %f\n", as_f32);
    print("As F64: %f\n", as_f64);
}

