extern print_clean(msg: str);
extern print_int(val: i32);

func factorial(n: i32): i32 {
    if n <= 1 {
        return 1;
    } else {
        return n * factorial(n - 1);
    }
}

func main(): void {
    print_clean("Starting recursion test...\n");
    print_clean("Factorial of 3: ");
    let result: i32 = factorial(3);
    print_int(result);
    print_clean("\n");
    print_clean("Test completed\n");
}
