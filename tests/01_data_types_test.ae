// Comprehensive Data Types Test for ÆLang
extern print(format: str, ...);
extern read();

func main(): void {
    // ============ Integer Types Test ============
    print("=== Integer Types Test ===\n");
    
    // 8-bit integers
    let tiny_signed: i8 = 127;
    let tiny_unsigned: u8 = 255;
    print("i8 max: %d, u8 max: %d\n", tiny_signed, tiny_unsigned);
    
    // 16-bit integers  
    let small_signed: i16 = 32767;
    let small_unsigned: u16 = 65535;
    print("i16 max: %d, u16 max: %d\n", small_signed, small_unsigned);
    
    // 32-bit integers
    let standard_signed: i32 = 2147483647;
    let standard_unsigned: u32 = 4294967295;
    print("i32 max: %d, u32 max: %u\n", standard_signed, standard_unsigned);
    
    // ============ Floating Point Types Test ============
    print("=== Floating Point Types Test ===\n");
    
    // 32-bit float
    let float_val: f32 = 3.14159;
    let float_positive: f32 = 2.71828;
    print("f32 positive: %.5f, negative: %.5f\n", float_val, float_negative);
    
    // ============ Character and String Test ============
    print("\n=== Character and String Test ===\n");
    
    let char_val: char = 'A';
    print("Character: %c\n", char_val);
    
    let string_val: str = "Hello ÆLang!";
    print("String: %s\n", string_val);
    
    // ============ Boolean Test ============
    print("\n=== Boolean Test ===\n");
    
    let bool_true: bool = true;
    let bool_false: bool = false;
    print("Boolean true: %d, false: %d\n", bool_true, bool_false);
}
