// Comprehensive Operators and Precedence Test for Ã†Lang
extern print(format: str, ...);

func main(): void {
    print("=== Arithmetic Operators Test ===\n");
    
    // Basic arithmetic
    let a: i32 = 20;
    let b: i32 = 7;
    
    let add_result: i32 = a + b;
    let sub_result: i32 = a - b;
    let mul_result: i32 = a * b;
    let div_result: i32 = a / b;
    let mod_result: i32 = a % b;
    
    print("a = %d, b = %d\n", a, b);
    print("Addition: %d + %d = %d\n", a, b, add_result);
    print("Subtraction: %d - %d = %d\n", a, b, sub_result);
    print("Multiplication: %d * %d = %d\n", a, b, mul_result);
    print("Division: %d / %d = %d\n", a, b, div_result);
    print("Modulo: %d %% %d = %d\n", a, b, mod_result);
    
    // ============ Operator Precedence Test ============
    print("\n=== Operator Precedence Test ===\n");
    
    // Test: 2 + 3 * 4 should be 14 (not 20)
    let precedence1: i32 = 2 + 3 * 4;
    print("2 + 3 * 4 = %d (should be 14)\n", precedence1);
    
    // Test: 20 / 4 + 2 should be 7 (not 3.33)
    let precedence2: i32 = 20 / 4 + 2;
    print("20 / 4 + 2 = %d (should be 7)\n", precedence2);
    
    // Test: (2 + 3) * 4 should be 20
    let precedence3: i32 = (2 + 3) * 4;
    print("(2 + 3) * 4 = %d (should be 20)\n", precedence3);
    
    // Test: 15 - 3 * 2 should be 9 (not 24)
    let precedence4: i32 = 15 - 3 * 2;
    print("15 - 3 * 2 = %d (should be 9)\n", precedence4);
    
    // ============ Unary Operators Test ============
    print("\n=== Unary Operators Test ===\n");
    
    let positive: i32 = 42;
    let negative: i32 = -positive;
    print("Positive: %d, Negative: %d\n", positive, negative);
    
    // ============ Floating Point Arithmetic ============
    print("\n=== Floating Point Arithmetic ===\n");
    
    let float_a: f32 = 10.5;
    let float_b: f32 = 3.2;
    
    let float_add: f32 = float_a + float_b;
    let float_sub: f32 = float_a - float_b;
    let float_mul: f32 = float_a * float_b;
    let float_div: f32 = float_a / float_b;
    
    print("Float a = %.2f, b = %.2f\n", float_a, float_b);
    print("Float add: %.2f + %.2f = %.2f\n", float_a, float_b, float_add);
    print("Float sub: %.2f - %.2f = %.2f\n", float_a, float_b, float_sub);
    print("Float mul: %.2f * %.2f = %.2f\n", float_a, float_b, float_mul);
    print("Float div: %.2f / %.2f = %.2f\n", float_a, float_b, float_div);
}
