// Interactive Even/Odd Checker - Takes user input in ÆLang
extern print_int(val: i32);
extern read_int();

func main(): void {
    print("╔═════════════════════════════════════════╗");
    print("║        INTERACTIVE EVEN/ODD CHECKER    ║");
    print("║             ÆLang Input Demo            ║");
    print("╚═════════════════════════════════════════╝");
    print("");
    
    print("🎯 This program will check if your number is even or odd!");
    print("");
    print("Please enter a number: ");
    
    // Read user input
    let user_number: i32 = read_int();
    
    print("");
    print("You entered: ");
    print_int(user_number);
    print("");
    
    // Calculate remainder using modulo operator
    let remainder: i32 = user_number % 2;
    
    print("Analysis:");
    print("Number divided by 2 gives remainder: ");
    print_int(remainder);
    print("");
    
    // Check if even or odd
    if remainder == 0 {
        print("🎉 RESULT: Your number is EVEN!");
        print("");
        print("✅ Even numbers are divisible by 2 with no remainder");
    } else {
        print("🎉 RESULT: Your number is ODD!");
        print("");
        print("✅ Odd numbers leave a remainder of 1 when divided by 2");
    }
    
    print("");
    print("╔═════════════════════════════════════════╗");
    print("║              FEATURES USED              ║");
    print("╠═════════════════════════════════════════╣");
    print("║ ✅ User input with read_int()          ║");
    print("║ ✅ Modulo operator (%)                 ║");
    print("║ ✅ If/else conditional logic           ║");
    print("║ ✅ Comparison operators (==)           ║");
    print("║ ✅ Interactive number analysis         ║");
    print("╚═════════════════════════════════════════╝");
    print("");
    print("🏆 Thank you for testing ÆLang's interactive features!");
}
