    print("â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•");
    print("");
    
    print("ğŸ”€ Boolean Logic Tester");
    print("   Tests logical operators with user-provided values.");
    print("");
    
    print("Enter first number (will be treated as true if non-zero):");
    let num1: i32 = read_int();
    
    print("Enter second number (will be treated as true if non-zero):");
    let num2: i32 = read_int();
    
    // Convert numbers to boolean logic
    let bool1: bool = num1 != 0;
    let bool2: bool = num2 != 0;
    
    print("");
    print("ğŸ“Š Boolean Conversion:");
    print_clean("  "); print_int(num1);
    if bool1 {
        print(" â†’ TRUE");
    } else {
        print(" â†’ FALSE");
    }
    
    print_clean("  "); print_int(num2);
    if bool2 {
        print(" â†’ TRUE");
    } else {
        print(" â†’ FALSE");
    }
    print("");
    
    print("ğŸ”— Logical Operations:");
    
    // AND operation
    let and_result: bool = bool1 && bool2;
    if and_result {
        print("  âœ… AND: TRUE && TRUE = TRUE");
    } else {
        print("  âŒ AND: Result = FALSE");
    }
    
    // OR operation  
    let or_result: bool = bool1 || bool2;
    if or_result {
        print("  âœ… OR: Result = TRUE");
    } else {
        print("  âŒ OR: FALSE || FALSE = FALSE");
    }
    
    // NOT operations
    let not1: bool = !bool1;
    let not2: bool = !bool2;
    
    print_clean("  NOT first: !");
    if bool1 {
        print("TRUE = FALSE");
    } else {
        print("FALSE = TRUE");
    }
    
    print_clean("  NOT second: !");
    if bool2 {
        print("TRUE = FALSE");
    } else {
        print("FALSE = TRUE");
    }
    print("");
}

